@import '../../../stylesheets/variable.styl'

.textarea {
  transition: max-height 0.5s ease;
  width: 100%;
  height: 30px;
  max-height: 30px;
  margin-top: 8px;
  border: 1px solid w-gray-light;
  border-radius: 4px;

  &:focus {
    height: 100px;
    max-height: 100px;
    outline: none;
  }
}
